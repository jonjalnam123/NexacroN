              <Static id="staPhone" taborder="14" text="핸드폰" left="0" top="147" width="120" cssclass="sta_WF_DetailLabel" height="50" visible="true" background="pink" color="white" border="1px solid pink" font="10pt &quot;Arial&quot;,&quot;휴먼매직체&quot;"/>
